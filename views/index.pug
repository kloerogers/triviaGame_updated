doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Trivia Game
    link(rel="stylesheet", href="/css/main.css")
    script(src="/js/main.js" defer) 
  body 
    section
      form
        p
          label Number of Players:
            select#numPlayerSelect
              option(value="one") One 
              option(value="two") Two
        p#playerOneName
          label Player One:
            input#pOneNameInput(type="text")
        p.hidden#playerTwoName
          label Player Two:
            input#pTwoNameInput(type="text")
        p
          label Category:
            select#categorySelect
              option(disabled selected value) -- select an option --
              option(value='any') Any Category
              option(value='9') General Knowledge
              option(value='10') Entertainment: Books
              option(value='11') Entertainment: Film
              option(value='12') Entertainment: Music
              option(value='13') Entertainment: Musicals &amp; Theatres
              option(value='14') Entertainment: Television
              option(value='15') Entertainment: Video Games
              option(value='16') Entertainment: Board Games
              option(value='17') Science &amp; Nature
              option(value='18') Science: Computers
              option(value='19') Science: Mathematics
              option(value='20') Mythology
              option(value='21') Sports
              option(value='22') Geography
              option(value='23') History
              option(value='24') Politics
              option(value='25') Art
              option(value='26') Celebrities
              option(value='27') Animals
              option(value='28') Vehicles
              option(value='29') Entertainment: Comics
              option(value='30') Science: Gadgets
              option(value='31') Entertainment: Japanese Anime &amp; Manga
              option(value='32') Entertainment: Cartoon &amp; Animations
        p
          label Difficulty:
            select#difficultySelect
              option(disabled selected value) -- select an option --
              option(value="any") Any Difficulty 
              option(value="easy") Easy 
              option(value="medium") Medium 
              option(value="hard") Hard
        input#gameStart(type="button" value="Game Start")
